{{#each erros}}
<div class="alert alert-danger">{{{texto}}}</div>
{{else}}
{{/each}}

<h4>Nova publicação</h4>
<hr>

<div class="card mt-4">
    <div class="card-body">
        <form action="/admin" method="post">
            <p>
                <label for="titulo">Título: </label>
                <input type="text" name="titulo" placeholder="Título" class="form-control">
            </p>
            <p>
                <label for="slug">Slug: </label>
                <input type="text" name="slug" placeholder="Slug:" class="form-control" >
            </p>
            <p>
                <label for="descricao">Descrição: </label>
                <input type="text" name="descricao" placeholder="Descrição:" class="form-control">
            </p>
            <p>
                <label for="conteudo">Conteúdo: </label>
                <textarea name="conteudo" id="" cols="30" rows="10" class="form-control"></textarea>
            </p>
            <p>
                <label for="categoria">Categoria: </label>
                <select name="categoria" class="form-select">
                {{#each categoria}}
                
                    <option value="{{_id}}">{{titulo}}</option>
                {{else}}
                    <option value="Nenhuma categoria registrada"></option>
                {{/each}}
                </select>
                <button type="submit" class="button mt-4">Publicar</button>
            </p>
        </form>
    </div>
</div>