<a href="/admin/novapostagem"><button class="button mt-2">Criar nova publicação</button></a>
<a href="/admin/categorias"><button class="button mt-2">Ver lista de categorias</button></a>
<h2 class="mt-4">Últimas publicações</h2>
<hr>

{{#each postagem}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <br>
        <p class="mt-3">{{{descricao}}}</p>
        <p class="mt-2">{{{conteudo}}}</p>
        <div class="btn-group">
            <a href="/admin/editpost/{{_id}}" class="btn-asn mx-2">
                <button type="button" class="Button">🖋️
                    <div class="animation-container"> Editar</div>
                </button>
            </a>
            <form action="/admin/deletpost/{{_id}}" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="Button">🗑️
                    <div class="animation-container">Deletar</div>
                </button>
            </form>
        </div>
        <hr>
        <div class="title-date-container">
            <small>Data de publicação: <a class="mx-1" style="text-decoration: none; color: black;">{{data}}</a></small>
            <br>
            <small>Categoria: {{categoria.titulo}}</small>
        </div>
    </div>
</div>
{{else}}
    <p class="mt-3">Nenhuma postagem registrada!</p>
{{/each}}
