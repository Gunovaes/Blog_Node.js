{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<form action="/admin/addcategoria" method="post">
    <h4>Nova categoria</h4>
    <hr>
    <div class="card">
        <div class="card-body">
            <p>
                <label for="titulo">Título: </label>
                <input type="text" name="titulo" placeholder="Título:" class="form-control">
            </p>
            <label for="conteudo">Slug: </label>
            <input type="text" name="slug" placeholder="Slug:" class="form-control">
            <button class="button mt-4">Publicar</button>
        </div>
    </div>
</form>
