{{#each erros}}
<div class="alert alert-danger">{{{texto}}}</div>
{{else}}
{{/each}}

<h4>Editar publicação</h4>
<hr>

<div class="card mt-4">
    <div class="card-body">
        <form action="/admin/editpost" method="post">
        <input type="hidden" name="id" value="{{postagem._id}}">
            <p>
                <label for="titulo">Título: </label>
                <input type="text" name="titulo" placeholder="Título" class="form-control" value="{{postagem.titulo}}">
            </p>
            <p>
                <label for="slug">Slug: </label>
                <input type="text" name="slug" placeholder="Slug:" class="form-control" value="{{postagem.slug}}" >
            </p>
            <p>
                <label for="descricao">Descrição: </label>
                <input type="text" name="descricao" placeholder="Descrição:" class="form-control" value="{{postagem.descricao}}">
            </p>
            <p>
                <label for="conteudo">Conteúdo: </label>
                <textarea name="conteudo" id="" cols="30" rows="10" class="form-control">{{postagem.conteudo}}</textarea>
            </p>
            <p>
                <label for="categoria">Categoria: </label>
                <select name="categoria" class="form-select">
                {{#each categoria}}
                    <option value="{{_id}}">{{titulo}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada!</option>
                {{/each}}
                </select>
                <button class="button mt-4">Editar</button>
            </p>
        </form>
    </div>
</div>